<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8"/>
        <title>Backbone.js Library</title>
        
    </head>
    <body>
        <div id="books">
        <%= form_for :book, :url => books_path, :html => { :multipart => true } do |form| %>
            <%= form.file_field :bookCover %>
        <% end %>
        <form id="addBook" action="#" enctype="multipart/form-data">
            <div>
                <!-- <label for="coverImage">CoverImage: </label><input id="coverImage" type="file" /> -->
                <label for="title">Title: </label><input id="title" type="text" />
                <label for="author">Author: </label><input id="author" type="text" />
                <label for="releaseDate">Release date: </label><input type="text" id="releaseDate" >
                
                <label for="keywords">Keywords: </label><input id="keywords" type="text" />
                <button id="add">Add</button>
            </div>
        </form>
    </div>
    <script type="text/javascript">
    $(function () {
                $('#releaseDate').datepicker();
            });
</script>
    </body>
</html>